#!/bin/sh

# Welcome to the thoughtbot laptop script!
# Be prepared to turn your laptop (or desktop, no haters here)
# into an awesome development machine.

fancy_echo() {
  local fmt="$1"; shift

  # shellcheck disable=SC2059
  printf "\n$fmt\n" "$@"
}

append_to_zshrc() {
  local text="$1" zshrc
  local skip_new_line="${2:-0}"

  if [ -w "$HOME/.zshrc.local" ]; then
    zshrc="$HOME/.zshrc.local"
  else
    zshrc="$HOME/.zshrc"
  fi

  if ! grep -Fqs "$text" "$zshrc"; then
    if [ "$skip_new_line" -eq 1 ]; then
      printf "%s\n" "$text" >> "$zshrc"
    else
      printf "\n%s\n" "$text" >> "$zshrc"
    fi
  fi
}

# shellcheck disable=SC2154
trap 'ret=$?; test $ret -ne 0 && printf "failed\n\n" >&2; exit $ret' EXIT

set -e

if [ ! -d "$HOME/.bin/" ]; then
  mkdir "$HOME/.bin"
fi

if [ ! -f "$HOME/.zshrc" ]; then
  touch "$HOME/.zshrc"
fi

if [ ! -d "$HOME/.ssh" ]; then
  mkdir -p $HOME/.ssh
fi

if [ ! -f "$HOME/.ssh/id_rsa.pub" ]; then
  fancy_echo "Creating SSH Keys"
  #ssh-keygen
  fancy_echo "Please add this key to your github profile."
  echo "Your key has been copied to the clipboard, you can use Cmd-V to paste it"
  echo "Come back after you've done that and click enter"
  cat $HOME/.ssh/id_rsa.pub | pbcopy
  open "https://github.com/settings/ssh"
  read -n 1 -s
fi

# shellcheck disable=SC2016
append_to_zshrc 'export PATH="$HOME/.bin:$PATH"'

if [ -d "/usr/local" ]; then
  if ! [ -r "/usr/local" ]; then
    sudo chown -R "$(whoami)":admin /usr/local
  fi
else
  sudo mkdir /usr/local
  sudo chflags norestricted /usr/local
  sudo chown -R "$(whoami)":admin /usr/local
fi

case "$SHELL" in
  */zsh) : ;;
  *)
    fancy_echo "Changing your shell to zsh ..."
      chsh -s "$(which zsh)"
    ;;
esac

brew_install_or_upgrade() {
  if brew_is_installed "$1"; then
    if brew_is_upgradable "$1"; then
      brew upgrade "$@"
    fi
  else
    brew install "$@"
  fi
}

brew_is_installed() {
  local name
  name="$(brew_expand_alias "$1")"

  brew list -1 | grep -Fqx "$name"
}

brew_is_upgradable() {
  local name
  name="$(brew_expand_alias "$1")"

  ! brew outdated --quiet "$name" >/dev/null
}

brew_tap() {
  brew tap "$1" --repair 2> /dev/null
}

brew_expand_alias() {
  brew info "$1" 2>/dev/null | head -1 | awk '{gsub(/.*\//, ""); gsub(/:/, ""); print $1}'
}

brew_launchctl_restart() {
  local name
  name="$(brew_expand_alias "$1")"
  local domain="homebrew.mxcl.$name"
  local plist="$domain.plist"

  mkdir -p "$HOME/Library/LaunchAgents"
  ln -sfv "/usr/local/opt/$name/$plist" "$HOME/Library/LaunchAgents"

  if launchctl list | grep -Fq "$domain"; then
    launchctl unload "$HOME/Library/LaunchAgents/$plist" >/dev/null
  fi
  launchctl load "$HOME/Library/LaunchAgents/$plist" >/dev/null
}

gem_install_or_update() {
  if gem list "$1" --installed > /dev/null; then
    gem update "$@"
  else
    gem install "$@"
    rbenv rehash
  fi
}

if ! command -v brew >/dev/null; then
  fancy_echo "Installing Homebrew ..."
    curl -fsS \
      'https://raw.githubusercontent.com/Homebrew/install/master/install' | ruby

    append_to_zshrc '# recommended by brew doctor'

    # shellcheck disable=SC2016
    append_to_zshrc 'export PATH="/usr/local/bin:$PATH"' 1

    export PATH="/usr/local/bin:$PATH"
fi

if brew list | grep -Fq brew-cask; then
  fancy_echo "Uninstalling old Homebrew-Cask ..."
  brew uninstall --force brew-cask
fi

fancy_echo "Updating Homebrew formulae ..."

brew tap
brew tap homebrew/versions
brew tap thoughtbot/formulae

brew update

fancy_echo "Updating Unix tools ..."
brew_install_or_upgrade 'ctags'
brew_install_or_upgrade 'git'
brew_install_or_upgrade 'git-extras'
brew_install_or_upgrade 'rcm'
brew_install_or_upgrade 'openssl'
brew_install_or_upgrade 'direnv'
brew_install_or_upgrade 'reattach-to-user-namespace'
brew_install_or_upgrade 'the_silver_searcher'
brew_install_or_upgrade 'tmux'
brew_install_or_upgrade 'vim'
brew_install_or_upgrade 'zsh'
brew_install_or_upgrade 'wget'
brew_install_or_upgrade 'zsh-completions'

fancy_echo "Updating GitHub tools ..."
brew_install_or_upgrade 'hub'
brew_install_or_upgrade 'git-extras'

fancy_echo "Updating image tools ..."
brew_install_or_upgrade 'imagemagick'
brew_install_or_upgrade 'freeimage'

fancy_echo "Updating testing tools ..."
brew_install_or_upgrade 'qt'
brew_install_or_upgrade 'phantomjs'

fancy_echo "Updating programming languages ..."
brew_install_or_upgrade 'libyaml' # should come after openssl
brew_install_or_upgrade 'node'
brew_install_or_upgrade 'rbenv'
brew_install_or_upgrade 'ruby-build'
brew_install_or_upgrade 'rbenv-bundler'

fancy_echo "Updating services ..."
brew_install_or_upgrade 'mysql'
brew_install_or_upgrade 'redis'
brew_install_or_upgrade 'elasticsearch'
brew_install_or_upgrade 'rabbitmq'
brew_install_or_upgrade 'memcached'
brew_install_or_upgrade 'pow'
brew_install_or_upgrade 'cassandra22'

fancy_echo "Updating customs"
brew_launchctl_restart 'cassandra22'

fancy_echo "Configuring Ruby ..."
find_latest_ruby() {
  rbenv install -l | grep -v - | tail -1 | sed -e 's/^ *//'
}

ruby_version="$(find_latest_ruby)"
# shellcheck disable=SC2016
append_to_zshrc 'eval "$(rbenv init - --no-rehash)"' 1
eval "$(rbenv init -)"

if ! rbenv versions | grep -Fq "$ruby_version"; then
  RUBY_CONFIGURE_OPTS=--with-openssl-dir=/usr/local/opt/openssl rbenv install -s "$ruby_version"
fi

rbenv global "$ruby_version"
rbenv shell "$ruby_version"
gem update --system
gem_install_or_update 'bundler'
gem_install_or_update 'mailcatcher'

number_of_cores=$(sysctl -n hw.ncpu)
bundle config --global jobs $((number_of_cores - 1))

if [ -f "$HOME/.laptop.local" ]; then
  fancy_echo "Running your customizations from ~/.laptop.local ..."
  # shellcheck disable=SC1090
  . "$HOME/.laptop.local"
fi

fancy_echo "Setting Up Projects Directory"
if [ ! -d "$HOME/projects" ]; then
  mkdir -p "$HOME/projects"
fi

fancy_echo "Cloning Or Updating Laptop Locally"
# Clone self to projects directory
if [ ! -d "$HOME/projects/laptop" ]; then
  fancy_echo "Cloning Self Locally"
  git clone git@github.com:captainu/laptop
else
  cd "$HOME/projects/laptop"
  git checkout master
  git pull origin master
fi


fancy_echo "Updating Mailtrap Config"
locals_launchctl_restart() {
  local name
  name=$1
  local domain="com.captainu.$name"
  local plist="$domain.plist"

  mkdir -p "$HOME/Library/LaunchAgents"
  ln -sfv "$HOME/projects/laptop/launch_agents/$plist" "$HOME/Library/LaunchAgents"

  if launchctl list | grep -Fq "$domain"; then
    launchctl unload "$HOME/Library/LaunchAgents/$plist" >/dev/null
  fi
  launchctl load "$HOME/Library/LaunchAgents/$plist" >/dev/null
}
locals_launchctl_restart "mailcatcher"

fancy_echo "Installing CU commands"
if [ ! -d "$HOME/projects/subs" ]; then
  cd "$HOME/projects"
  git clone git@github.com:captainu/subs
else
  cd "$HOME/projects/cu"
  git pull origin master
fi

fancy_echo "Install basic dotfiles"
if [ ! -d "$HOME/projects/dotfiles" ]; then
  cd "$HOME/projects"
  git clone git@github.com:captainu/dotfiles
  env RCRC=$HOME/projects/dotfiles/rcrc rcup
fi

fancy_echo "Updating configs"
append_to_zshrc "export PATH=$HOME/.rbenv/bin:$HOME/projects/subs/bin:/usr/local/bin:$PATH"
append_to_zshrc 'eval "$(rbenv init -)"'
append_to_zshrc 'eval "$($HOME/projects/subs/bin/cu init -)"'
